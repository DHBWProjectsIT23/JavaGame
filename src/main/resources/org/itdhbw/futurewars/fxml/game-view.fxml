<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="org.itdhbw.futurewars.controller.ui.GameViewController">
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <VBox>
            <GridPane>
                <HBox>
                    <Label text="Selected Tile: "/>
                    <Label fx:id="selectedTileDebug" text="Label"/>
                </HBox>
                <HBox GridPane.columnIndex="1">
                    <Label text="HoveredTile: "/>
                    <Label fx:id="hoveredTileDebug" text="Label"/>
                </HBox>
                <HBox GridPane.columnIndex="2">
                    <Label text="Moving: "/>
                    <Label fx:id="movingDebug" text="Label"/>
                </HBox>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints prefHeight="20.0" vgrow="SOMETIMES"/>
                </rowConstraints>
            </GridPane>
            <HBox>
                <AnchorPane>
                    <fx:include source="map-view.fxml"/>
                </AnchorPane>
                <VBox>
                    <VBox>
                        <Label text="Selected Tile"/>
                        <HBox>
                            <Label text="Type: "/>
                            <Label fx:id="selectedTileType"/>
                        </HBox>
                    </VBox>
                    <VBox>
                        <Label text="Selected Unit"/>
                        <HBox>
                            <Label text="Type: "/>
                            <Label fx:id="selectedUnitType"/>
                        </HBox>
                        <HBox>
                            <Label text="HP:"/>
                            <Label fx:id="selectedUnitHP"/>
                        </HBox>
                        <HBox>
                            <Label text="Range:"/>
                            <Label fx:id="selectedUnitRange"/>
                        </HBox>
                        <HBox>
                            <Label text="Team: "/>
                            <Label fx:id="selectedUnitTeam"/>
                        </HBox>
                    </VBox>
                    <Button mnemonicParsing="false" onAction="#endTurn" text="endTurn"/>
                    <Label fx:id="currentLabel" text="Current:"/>
                </VBox>
            </HBox>
        </VBox>
        <AnchorPane fx:id="escapeMenu" visible="false">
            <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: Green; -fx-opacity: 0.2;"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0"/>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Button mnemonicParsing="false" onAction="#openSettings" text="Settings"/>
                <Button mnemonicParsing="false" onAction="#quitToMenu" text="Quit to Menu"/>
                <Button mnemonicParsing="false" onAction="#quitToDesktop" text="Quit to Desktop"/>
            </VBox>
        </AnchorPane>
    </StackPane>
</AnchorPane>
