<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1"
           dividerPositions="0.10022271714922049"
           orientation="VERTICAL"
           xmlns="http://javafx.com/javafx/21"
           fx:controller="org.itdhbw.futurewars.editors.controllers.MapEditorController">
    <HBox>
        <Label fx:id="statusLabel" text="Status" />
        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveMap" text="Save" />
        <Button mnemonicParsing="false" onAction="#saveMapAs" text="Save as..." />
        <Button mnemonicParsing="false" onAction="#loadMap" text="Load" />
        <Button mnemonicParsing="false" onAction="#goBack" text="Quit"/>
    </HBox>
    <SplitPane dividerPositions="0.7803504380475594">
        <AnchorPane fx:id="editorGridContainer">
         <children>
              <GridPane fx:id="editorGrid" gridLinesVisible="true" layoutX="0.5" layoutY="0.5" maxHeight="800.0" maxWidth="1300.0" minHeight="-Infinity" minWidth="-Infinity" AnchorPane.rightAnchor="0.0">
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
              </GridPane>
         </children>
      </AnchorPane>
        <VBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
                <TextField fx:id="widthInput" prefHeight="26.0" prefWidth="87.0" promptText="Width" />
                <TextField fx:id="heightInput" prefHeight="26.0" prefWidth="101.0" promptText="Height" />
                <Button fx:id="confirmSizeButton" mnemonicParsing="false" onAction="#setSize" text="Confirm" />
            </HBox>
            <HBox>
                <VBox spacing="10.0">
               <children>
                      <MenuButton fx:id="tileDropdown" mnemonicParsing="false" text="TileType" />
                  <MenuButton fx:id="textureDropdown" mnemonicParsing="false" text="TextureVariant" />
               </children>
            </VBox>
            <Pane prefWidth="50.0" />
                <VBox spacing="10.0">
               <children>
                      <MenuButton fx:id="unitDropdown" mnemonicParsing="false" text="UnitType" />
                  <MenuButton fx:id="teamDropdown" mnemonicParsing="false" text="Team">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Team 1" />
                        <MenuItem mnemonicParsing="false" text="Team 2" />
                     </items>
                  </MenuButton>
               </children>
            </VBox>
            </HBox>
        </VBox>
    </SplitPane>
    <styleClass>
        <String fx:value="dark-blue-bg"/>
        <String fx:value="map-editor"/>
    </styleClass>
</SplitPane>
