<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.10022271714922049" orientation="VERTICAL"
           prefHeight="900.0"
           prefWidth="1600.0" xmlns="http://javafx.com/javafx/21"
           fx:controller="org.itdhbw.futurewars.controller.ui.editor.MapEditorController">
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Label fx:id="statusLabel" text="Status"/>
        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveMap" text="Save"/>
        <Button mnemonicParsing="false" onAction="#saveMapAs" text="Save as..."/>
        <Button mnemonicParsing="false" onAction="#loadMap" text="Load"/>
    </HBox>
    <SplitPane dividerPositions="0.7803504380475594" prefHeight="160.0" prefWidth="200.0">
        <GridPane fx:id="editorGrid" gridLinesVisible="true" maxHeight="-Infinity" maxWidth="-Infinity"
                  minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1300.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <HBox prefHeight="100.0" prefWidth="200.0">
                <TextField fx:id="widthInput" prefHeight="26.0" prefWidth="87.0" promptText="Width"/>
                <TextField fx:id="heightInput" prefHeight="26.0" prefWidth="101.0" promptText="Height"/>
                <Button fx:id="confirmSizeButton" mnemonicParsing="false" onAction="#setSize" text="Confirm"/>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
                <MenuButton fx:id="tileDropdown" mnemonicParsing="false" text="TileType"/>
                <MenuButton fx:id="unitDropdown" mnemonicParsing="false" text="UnitType"/>
            </HBox>
        </VBox>
    </SplitPane>
</SplitPane>
